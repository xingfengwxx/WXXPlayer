<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#f0f0f0" />
            <stroke android:width="0.5dp" android:color="#aaaaaa" />
            <padding android:bottom="2dp" android:left="10dp" android:right="10dp" android:top="2dp" />
            <corners android:bottomLeftRadius="12dp" android:bottomRightRadius="12dp" android:topLeftRadius="12dp" android:topRightRadius="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fafafa" />
            <stroke android:width="0.5dp" android:color="#aaaaaa" />
            <padding android:bottom="2dp" android:left="10dp" android:right="10dp" android:top="2dp" />
            <corners android:bottomLeftRadius="12dp" android:bottomRightRadius="12dp" android:topLeftRadius="12dp" android:topRightRadius="12dp" />
        </shape>
    </item>
</selector>
